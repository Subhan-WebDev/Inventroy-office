<!DOCTYPE html>
<html>
<head>
  <title>User: <%= name %></title>
</head>
<body>
  <h1>Items for User: <%= name %></h1>
  <a href="/">Back to Dashboard</a>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Team</th>
      <th>Type</th>
      <th>Status</th>
      <th>Date</th>
      <th>QR Code</th>
      <th>Actions</th>
    </tr>
    <% items.forEach(item => { %>
      <tr>
        <td><%= item._id %></td>
        <td><%= item.team %></td>
        <td><%= item.type %></td>
        <td><%= item.status %></td>
        <td><%= item.date %></td>
        <td>
          <% if (item.qrCodePath) { %>
            <img src="<%= item.qrCodePath %>" width="100">
          <% } %>
        </td>
        <td>
          <a href="/form/<%= item._id %>">Edit</a> |
          <a href="/update/<%= item._id %>/faulty">Mark Faulty</a> |
          <a href="/update/<%= item._id %>/unassign">Unassign</a>
        </td>
      </tr>
    <% }); %>
  </table>
</body>
</html>
